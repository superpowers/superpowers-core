&
  text-align center
  position absolute
  top 0
  left 0
  right 0
  bottom 0

  background url(images/artwork.png) center center no-repeat, #eee
  background-size auto 80%
  border 1px solid rgba(0,0,0,0.2)

  cursor pointer

h1
  font-weight normal
  font-size 3em
  margin-top 1em
  line-height 1
  pointer-events none

.version
  position absolute
  top 0
  left 0
  padding 0.5em
  font-weight normal
  opacity 0.5

.update-status
  position absolute
  bottom 0
  padding 2em 0.5em
  left 0
  right 0
