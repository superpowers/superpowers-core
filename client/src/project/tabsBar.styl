.tab-strip
  height 35px
  display flex
  margin 0
  padding 0

  * { user-select: none; }

.tab-strip > li
  display flex
  align-items center
  width 160px
  height 35px
  border-right 1px solid #bbb
  background #ddd
  -webkit-app-region no-drag

  &.dragged
    position absolute
    z-index 1000
    border-left 1px solid #bbb
    margin-left -1px

  &.drop-placeholder
    background none

    &:nth-last-child(1)
      border-right none

  &:not(.active)
    color #888

  &:hover
    background #eee

  &.active
    background #fff

  &.blink
    animation-duration 1s
    animation-iteration-count infinite
    animation-name blink
    background #aaa

@keyframes blink
  0%
    background #fff
  50%
    background #F7C9AE
  100%
    background #fff

.tab-strip > li.pinned
  width 40px
  justify-content center

.tab-strip > li .icon
  padding 0 0.25em
  width calc(24px + 0.5em)
  pointer-events none

.tab-strip > li .label
  pointer-events none
  flex 1
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  display flex
  flex-flow column

.tab-strip > li .location
  font-size 10px
  overflow hidden
  text-overflow ellipsis
  &:empty { display: none; }
  margin-bottom -4px

.tab-strip > li .name
  overflow-x hidden
  text-overflow ellipsis

.tab-strip > li .close
  margin-right 0.25em
  width 20px
  height 20px
  border none
  outline none

  background url(/images/tabs/close.svg) center center no-repeat
  opacity 0.5

  &:hover
    background-image url(/images/tabs/close-active.svg)
    opacity 0.5

  &:active
    background-image url(/images/tabs/close-active.svg)
    opacity 1
