.dialog {
  width: 100%;
  height: 100%;
  z-index: 10;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(128,128,128,0.5);
  display: flex;

  form {
    background-color: white;
    margin: auto;
    padding: 10px;
    width: 450px;
    display: flex;
    flex-flow: column;
    box-shadow: 0 0 20px rgba(0,0,0,0.2);
  }

  header {
    text-transform: uppercase;
    font-size: 1.5em;
    margin-bottom: 0.5em;
  }

  .group { margin-bottom: 0.5em; }

  input, select, textarea { padding: 0.125em 0.25em; }

  .buttons {
    display: flex;
    justify-content: flex-end;

    button { margin-left: 5px; }
  }
}
